    if(GetUser() == "Sebastian")
        ClearText()
        Print("User: " + GetUser())
        Print("Computer: " + Name())
        Print("Current Room: " + CurrentRoom(GetUser()))
        Print("Current User Action: " + GetAction(GetUser()))
        Print("Doors: " + GetDoorsCurrentRoom(GetUser()))
        Print("Names: " + names())
    else
        Print("You're no God.") 
    end
end
